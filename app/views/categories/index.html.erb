<div class="page">
  <%= will_paginate %>
</div>
<% @categories.each do |cat| %>
  <div class="container cardcon-index" >
    <div class="row">
      <div class="col-sm-6">
        <div class="card text-center">
          <div class="card-header">
            <%= cat.name.capitalize %>
            </div>
            <div class="card-body">
              <% if logged_in? and current_user.admin? %>
                <%= link_to 'Edit', edit_category_path(cat), class:"btn btn-primary"%>
                <%= link_to 'Show', category_path(cat), class:"btn btn-success"%>
              <% end %>
            </div>
          <div class="card-footer text-muted">
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="page">
  <%= will_paginate %>
</div>
