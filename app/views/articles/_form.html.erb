<%= render 'layouts/errors', obj:@article %>
<%= form_with(model: @article, local: true) do |f|%>
  <form>
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <%= f.text_field :title, class:'form-control', placeholder:'Your Title'%>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Description</label>
      <%= f.text_area :description, rows: 10, class:'form-control',
      placeholder:'Please describe your article here'%>
    </div>
    <div class="form-group">
      <div class="row col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class:"form-check-label input_checkbox") {cb.check_box(class:"checkbox") + cb.text } %>
        <% end %>
      </div>
    </div>

    <% if @article.id %>
      <%= f.submit :"Update Article", class:"btn btn-primary" %>
    <% else %>
      <%= f.submit :"Create Article", class:"btn btn-info" %>
    <% end %>
  </form>
<% end %>
