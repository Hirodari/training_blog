<div class="container-sm">
  <%= render 'art_errors' %>
  <%= form_with(model: @article, local: true) do |f|%>
    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <%= f.text_field :title, class:'form-control', placeholder:'Your Title'%>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Description</label>
        <%= f.text_area :description, class:'form-control', placeholder:'Please
        describe your article here'%>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Author</label>
        <%= f.text_field :author, class:'form-control', placeholder:'Your Name'%>
      </div>

      <% if @article.id %>
        <%= f.submit :"Update Article", class:"btn btn-primary" %>
      <% else %>
        <%= f.submit :"Create Article", class:"btn btn-info" %>
      <% end %>
    </form>
  <% end %>
</div>
