<div class="jumbotron">
  <h1 class="display-4"><%= @article.title.capitalize %></h1>
  <p class="lead"><%= @article.description.capitalize %></p>
  <hr class="my-4">
  <% if @article.categories.any?%>
    <p> Categories: <%= render @article.categories %></p>
  <% end %>
  <p><%= @article.user.username.capitalize %></p>
  <!--<a class="btn btn-dark btn-lg" href="#" role="button">-->
  <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to 'Go back to Articles', articles_path, class: 'btn btn-dark btn-lg'%></a>
    <%= link_to 'Edit Article', edit_article_path, class: 'btn btn-success btn-lg'%></a>
    <%= link_to 'Delete Article', article_path(@article), method: :delete,
    data: {confirm: "are you sure?"},class: 'btn btn-danger btn-lg'%></a>
  <% end %>
</div>
